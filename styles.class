/* Estilos generales */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
    color: #333;
}

header {
    background-color: #2d2d2d;
    color: white;
    padding: 30px 20px;
    text-align: center;
}

header h1 {
    font-size: 36px;
    margin-bottom: 10px;
}

header p {
    font-size: 18px;
}

/* Sección de Servicios */
#services {
    margin: 50px auto;
    width: 80%;
    text-align: center;
}

#services h2 {
    font-size: 28px;
    margin-bottom: 30px;
}

.service-card {
    background-color: white;
    padding: 20px;
    margin: 10px 0;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    text-align: center;
}

.service-card h3 {
    font-size: 24px;
    color: #2d2d2d;
}

.service-card p {
    font-size: 16px;
    color: #666;
}

/* Sección de Contacto */
#contact {
    background-color: #2d2d2d;
    color: white;
    padding: 30px 20px;
    text-align: center;
}

#contact h2 {
    font-size: 28px;
    margin-bottom: 20px;
}

#contact ul {
    list-style: none;
    padding: 0;
}

#contact ul li {
    font-size: 18px;
    margin: 10px 0;
}

/* Footer */
footer {
    background-color: #2d2d2d;
    color: white;
    padding: 20px;
    text-align: center;
    position: absolute;
    width: 100%;
    bottom: 0;
}
